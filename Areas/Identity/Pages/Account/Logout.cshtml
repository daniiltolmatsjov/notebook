@page
@model LogoutModel

<header style="text-align: center;">
    <h1 style="display: block; margin: 0 auto;">LOGOUT</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark" style="display: block; margin: 0 auto; background-color: dodgerblue; border-radius: 0;">CLICK TO LOGOUT</button>
            </form>
        }
        else
        {
            <p>ADIOS!</p>
        }
    }
</header>